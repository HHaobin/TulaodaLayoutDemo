                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:background="#622827"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingLeft="5dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="16sp"/>
                        <TextView
