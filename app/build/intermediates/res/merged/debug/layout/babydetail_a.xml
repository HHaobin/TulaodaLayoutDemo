<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context=".home.baby.BabyActivity" >

    <include
        android:id="@+id/top"
        layout="@layout/top_menu_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp" >

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.lesogo.cu.custom.ScaleView.HackyViewPager
                android:id="@+id/iv_baby"
                android:layout_width="match_parent"
                android:layout_height="345dp"
                android:background="#00000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/goods_name_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#000000" />


            </LinearLayout>

            <TextView
                android:id="@+id/goods_price_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text=""
                android:textColor="#CC3366"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/goods_item_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/goods_item_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/goods_item_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#CCCCCC" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="宝贝评价"
                android:textColor="#000000"
                android:textSize="18sp" />

            <com.gjs.MyView.MyListView
                android:id="@+id/listView_Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000" >
            </com.gjs.MyView.MyListView>
        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/baby_progress_circle"
        layout="@layout/progress_circle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF" >
        <View
            android:layout_toLeftOf="@+id/iv_baby_collection"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="#CCCCCC" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <View
                android:layout_toLeftOf="@+id/iv_baby_collection"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_toLeftOf="@+id/put_in"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:paddingTop="5dp"
                            android:layout_toLeftOf="@+id/put_in"
                            android:id="@+id/iv_baby_1_pic"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:src="@drawable/message_2"/>
                        <TextView
                            android:paddingBottom="2dp"
                            android:layout_toLeftOf="@+id/put_in"
                            android:id="@+id/iv_baby_1_text"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal|bottom"
                            android:textSize="12dp"
                            android:text="消息"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/iv_baby_collection1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                    </RelativeLayout>
                </RelativeLayout>

            <View
                android:layout_toLeftOf="@+id/iv_baby_collection"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="#CCCCCC" />
                <RelativeLayout
                    android:layout_toLeftOf="@+id/put_in"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:paddingTop="5dp"
                            android:layout_toLeftOf="@+id/put_in"
                            android:id="@+id/iv_baby_2_pic"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:src="@drawable/shop_2"/>
                        <TextView
                            android:paddingBottom="2dp"
                            android:layout_toLeftOf="@+id/put_in"
                            android:id="@+id/iv_baby_2_text"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal|bottom"
                            android:textSize="12dp"
                            android:text="店铺"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/iv_baby_collection2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                    </RelativeLayout>
                </RelativeLayout>
            <View
                android:layout_toLeftOf="@+id/iv_baby_collection"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="#CCCCCC" />
            <ImageView
                android:layout_toLeftOf="@+id/put_in"
                android:id="@+id/iv_baby_collection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/second_2" />
            </LinearLayout>
        </LinearLayout>



        <TextView

            android:id="@+id/put_in"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="0dp"
            android:background="#FF6C00" />

        <TextView
            android:id="@+id/buy_now"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="0dp"
            android:background="#D41717" />
    </LinearLayout>
  
    <LinearLayout 
        android:id="@+id/all_choice_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        
    </LinearLayout>

</RelativeLayout>