<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
     >

    <RelativeLayout
        android:id="@+id/point_show_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_line" >
    </RelativeLayout>

    <View 
        android:id="@+id/point_menu_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/point_menu_bottom"
        android:background="@color/bg_Gray"
        />
    
    <LinearLayout
        android:id="@+id/point_menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#cacaca"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/point_menu_0"
            android:paddingTop="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/point_iv_menu_0"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/point_menu_0_select"/>

            <TextView
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:id="@+id/point_iv_menu_text_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="积分"
                android:textSize="14sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/point_menu_1"
            android:paddingTop="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/point_iv_menu_1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/point_menu_1_select" />

            <TextView
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:id="@+id/point_iv_menu_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="热门兑换"
                android:textSize="14sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/point_menu_2"
            android:paddingTop="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/point_iv_menu_2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/point_menu_2_select" />

            <TextView
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:id="@+id/point_iv_menu_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="兑换记录"
                android:textSize="14sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>