<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_main"
              tools:context=".home.cnc.CncActivity" >
    <LinearLayout
        android:id="@+id/ic_web_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FAFAFA"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_cnc_opinion_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/tb_icon_actionbar_back" />

        <TextView
            android:id="@+id/explain_cnc_top_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="逛集市App"
            android:textColor="#888888"
            android:textSize="18sp" />

        <View
            android:id="@+id/iv_cnc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
        />
    </LinearLayout>

    
    <com.gjs.gjsmall.home.cnc.LJWebView
        android:id="@+id/web"
        android:layout_below="@+id/ic_web_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <LinearLayout
        android:id="@+id/ic_web_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FAFAFA"
        android:orientation="horizontal" >
    </LinearLayout>
</RelativeLayout>