<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context=".home.points.Point_FA">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/point_title"
        android:background="@color/bg_Gray">
        <ImageView
            android:id="@+id/point_back_1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/setting_back"/>
        <TextView
            android:layout_toRightOf="@+id/point_back_1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分换购"
            android:textSize="18sp"
            android:textColor="#333333" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/point_main_bg"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <TextView
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分好礼"
            android:textSize="18sp"
            android:textColor="#333333" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bg_Gray"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <LinearLayout
                    android:id="@+id/cargo_entire_main"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                android:layout_alignParentLeft="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="抢购"
                        android:textColor="#333333"
                        android:textSize="16sp"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/cargo_scroll_left"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignRight="@+id/cargo_entire_main"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/bg_Gray"/>
                <HorizontalScrollView
                    android:layout_toLeftOf="@+id/point_ic_filter_down"
                    android:layout_toRightOf="@+id/cargo_scroll_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/point_1_menu_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="居家"
                                android:textColor="#333333"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/point_1_index_1"
                                android:layout_alignParentBottom="true"
                                android:layout_width="wrap_content"
                                android:layout_height="5dp"
                                android:layout_centerInParent="true"
                                android:paddingLeft="22dp"
                                android:paddingRight="22dp"
                                android:background="@color/red"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/point_1_menu_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="电器"
                                android:textColor="#333333"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/point_1_index_2"
                                android:layout_alignParentBottom="true"
                                android:layout_width="wrap_content"
                                android:layout_height="5dp"
                                android:layout_centerInParent="true"
                                android:paddingLeft="22dp"
                                android:paddingRight="22dp"
                                android:background="@color/red"
                                android:visibility="gone"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/point_1_menu_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="食品"
                                android:textColor="#333333"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/point_1_index_3"
                                android:layout_alignParentBottom="true"
                                android:layout_width="wrap_content"
                                android:layout_height="5dp"
                                android:layout_centerInParent="true"
                                android:paddingLeft="22dp"
                                android:paddingRight="22dp"
                                android:background="@color/red"
                                android:visibility="gone"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/point_1_menu_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="服饰"
                                android:textColor="#333333"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/point_1_index_4"
                                android:layout_alignParentBottom="true"
                                android:layout_width="wrap_content"
                                android:layout_height="5dp"
                                android:layout_centerInParent="true"
                                android:paddingLeft="22dp"
                                android:paddingRight="22dp"
                                android:background="@color/red"
                                android:visibility="gone"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/point_1_menu_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="美装"
                                android:textColor="#333333"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/point_1_index_5"
                                android:layout_alignParentBottom="true"
                                android:layout_width="wrap_content"
                                android:layout_height="5dp"
                                android:layout_centerInParent="true"
                                android:paddingLeft="22dp"
                                android:paddingRight="22dp"
                                android:background="@color/red"
                                android:visibility="gone"/>
                        </RelativeLayout>
                    </LinearLayout>
                </HorizontalScrollView>
                <ImageView
                    android:id="@+id/point_ic_filter_down"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_filter_down"/>
        </RelativeLayout>
        </LinearLayout>
    <com.lhh.ptrrv.library.PullToRefreshRecyclerView
        android:id="@+id/ptrrv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>