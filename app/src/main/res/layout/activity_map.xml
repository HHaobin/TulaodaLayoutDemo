<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.baidu.mapapi.map.MapView
        android:layout_above="@+id/map_loction"
        android:layout_below="@+id/map_search"
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/map_search"
        android:layout_below="@+id/map_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/kfc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:padding="10dip"
            android:text="美食"
            android:gravity="center"
            android:textSize="15sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
        />
        <Button
            android:id="@+id/parking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:padding="10dip"
            android:text="超市"
            android:gravity="center"
            android:textSize="15sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
        />
        <Button
            android:id="@+id/uniqlo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:padding="10dip"
            android:text="服装"
            android:gravity="center"
            android:textSize="15sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
        />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/map_title"
        android:background="#FAFAFA">
        <ImageView
            android:id="@+id/map_setting_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/setting_back"/>
        <TextView
            android:id="@+id/id_loc_text"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位"
            android:textSize="18sp"
            android:textColor="#333333" />
        <TextView
            android:background="@color/gray"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/map_loction"
        android:text="当前位置"
        android:gravity="center"
        android:background="#FAFAFA"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
</RelativeLayout>
