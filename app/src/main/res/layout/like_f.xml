<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
 <RelativeLayout
     android:id="@+id/like_title"
     android:layout_width="match_parent"
     android:layout_height="50dp">
  <RelativeLayout
      android:id="@+id/like_title_like_rl"
      android:layout_marginBottom="5dp"
      android:layout_toLeftOf="@+id/like_title_mind"
      android:layout_width="50dp"
      android:layout_height="match_parent"
      android:orientation="vertical">
   <TextView
       android:layout_centerInParent="true"
       android:id="@+id/like_title_like"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="喜欢"
       android:textSize="20dp"/>
   <TextView
       android:layout_marginTop="3dp"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/like_title_like"
       android:background="@color/red"
       android:layout_gravity="center"
       android:id="@+id/like_title_slip_1"
       android:layout_width="45dp"
       android:layout_height="5dp"
       android:visibility="gone"/>
   <TextView
       android:id="@+id/like_title_like_tx"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
  </RelativeLayout>
  <TextView
      android:layout_centerInParent="true"
      android:layout_marginLeft="20dp"
      android:id="@+id/like_title_mind"
      android:layout_width="20dp"
      android:layout_height="wrap_content"/>
  <RelativeLayout
      android:id="@+id/like_title_recommend_rl"
      android:layout_marginBottom="5dp"
      android:layout_toRightOf="@+id/like_title_mind"
      android:layout_width="50dp"
      android:layout_height="match_parent"
      android:orientation="vertical">
   <TextView
       android:layout_centerInParent="true"
       android:id="@+id/like_title_recommend"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="推荐"
       android:textSize="20dp"/>
   <TextView
       android:layout_marginTop="3dp"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/like_title_recommend"
       android:background="@color/red"
       android:layout_gravity="center"
       android:id="@+id/like_title_slip_2"
       android:layout_width="45dp"
       android:layout_height="5dp"
       android:visibility="visible"/>
   <TextView
       android:id="@+id/like_title_recommend_tx"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
  </RelativeLayout>
  <ImageView
      android:layout_marginRight="10dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:src="@drawable/like_title_more"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
 </RelativeLayout>
 <ScrollView
     android:layout_below="@+id/like_title"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
   <RelativeLayout
       android:background="#f2f2f2"
       android:id="@+id/like_title_child"
       android:layout_width="match_parent"
       android:layout_height="40dp">
    <TextView
        android:background="@color/red"
        android:id="@+id/like_title_child_title_clip"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:layout_width="10dp"
        android:layout_height="20dp"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/like_title_child_title_clip"
        android:layout_centerVertical="true"
        android:id="@+id/like_title_child_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门推荐"
        android:textSize="18dp"/>
    <TextView
        android:background="@color/bg_Gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"/>
   </RelativeLayout>
   <RelativeLayout
       android:layout_below="@+id/like_title_product"
       android:id="@+id/like_title_product_2"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       android:layout_marginRight="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:visibility="visible">
    <ImageView
        android:id="@+id/like_title_product_head_2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/bg_border1"
        android:src="@drawable/like_title_product_head2"/>
    
    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/like_title_product_content_2"
        android:layout_below="@+id/like_title_product_title_2"
        android:layout_toRightOf="@+id/like_title_product_head_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/like_title_product_content2"/>
    <TextView
        android:id="@+id/like_title_product_title_2"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/like_title_product_head_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="麦维鞋类专营店"
        android:textSize="18sp"/>
    <RelativeLayout
        android:layout_below="@+id/like_title_product_content_2"
        android:id="@+id/like_title_product_bottom_2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <ImageView
         android:layout_marginRight="20dp"
         android:layout_centerVertical="true"
         android:layout_toLeftOf="@+id/like_title_product_more_text_2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/like_like_select"/>
     <TextView
         android:id="@+id/like_title_product_more_text_2"
         android:layout_toLeftOf="@+id/like_title_product_more_2"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         android:layout_marginRight="5dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="15sp"
         android:text="了解更多"/>
     <ImageView
         android:layout_centerVertical="true"
         android:layout_marginRight="5dp"
         android:id="@+id/like_title_product_more_2"
         android:layout_alignParentRight="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/like_title_product_more"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/like_title_product_bottombar_2"
        android:background="@color/bg_Gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"/>
   </RelativeLayout>

   <RelativeLayout
       android:layout_below="@+id/like_title_product_2"
       android:id="@+id/like_title_product3"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       android:layout_marginRight="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/like_title_product_head_3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/bg_border1"
        android:src="@drawable/like_title_product_head3"/>

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/like_title_product_content_3"
        android:layout_below="@+id/like_title_product_title_3"
        android:layout_toRightOf="@+id/like_title_product_head_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/like_title_product_content3"/>
    <TextView
        android:id="@+id/like_title_product_title_3"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/like_title_product_head_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="七匹狼服饰专营店"
        android:textSize="18sp"/>
    <RelativeLayout
        android:layout_below="@+id/like_title_product_content_3"
        android:id="@+id/like_title_product_bottom_3"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <ImageView
         android:layout_marginRight="20dp"
         android:layout_centerVertical="true"
         android:layout_toLeftOf="@+id/like_title_product_more_text_3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/like_like_select"/>
     <TextView
         android:id="@+id/like_title_product_more_text_3"
         android:layout_toLeftOf="@+id/like_title_product_more_3"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         android:layout_marginRight="5dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="15sp"
         android:text="了解更多"/>
     <ImageView
         android:layout_centerVertical="true"
         android:layout_marginRight="5dp"
         android:id="@+id/like_title_product_more_3"
         android:layout_alignParentRight="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/like_title_product_more"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/like_title_product_bottombar_3"
        android:background="@color/bg_Gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"/>
   </RelativeLayout>
   <RelativeLayout
       android:layout_below="@+id/like_title_child"
       android:id="@+id/like_title_product"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       android:layout_marginRight="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/like_title_product_head"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/bg_border1"
        android:src="@drawable/like_title_product_head1"/>

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/like_title_product_content"
        android:layout_below="@+id/like_title_product_title"
        android:layout_toRightOf="@+id/like_title_product_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/like_title_product_content1"/>
    <TextView
        android:id="@+id/like_title_product_title"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/like_title_product_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高姿旗舰店"
        android:textSize="20sp"/>
    <RelativeLayout
        android:layout_below="@+id/like_title_product_content"
        android:id="@+id/like_title_product_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <ImageView
         android:layout_marginRight="20dp"
         android:layout_centerVertical="true"
         android:layout_toLeftOf="@+id/like_title_product_more_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/like_like_select"/>
     <TextView
         android:id="@+id/like_title_product_more_text"
         android:layout_toLeftOf="@+id/like_title_product_more"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         android:layout_marginRight="5dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="15sp"
         android:text="了解更多"/>
     <ImageView
         android:layout_centerVertical="true"
         android:layout_marginRight="5dp"
         android:id="@+id/like_title_product_more"
         android:layout_alignParentRight="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/like_title_product_more"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/like_title_product_bottombar"
        android:background="@color/bg_Gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"/>
   </RelativeLayout>
  </RelativeLayout>
 </ScrollView>

</RelativeLayout>