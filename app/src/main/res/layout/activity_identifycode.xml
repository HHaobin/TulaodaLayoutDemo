<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/bg_main"
              tools:context=".user.login.LoginActivity" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/title"
        android:background="#FAFAFA">
        <ImageView
            android:id="@+id/identify_setting_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/setting_back"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写校验码"
            android:textSize="18sp"
            android:textColor="#333333" />
    </RelativeLayout>
    <TextView
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入手机***********收到的短信校验码"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:clickable="true"
        >
        <EditText
            android:maxLength="6"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/identifying_code"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="短信校验码"
            android:textColorHint="#a4a4a4"
            android:textSize="18sp"
            android:background="@drawable/shape_white"/>
        <Button
            android:id="@+id/btn_login_submit"
            android:text="获取验证码"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>


    <Button
        android:id="@+id/identify_button"
        android:background="@drawable/login_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="identify"
        android:text="下一步"
        android:textSize="16sp"
        android:textColor="@color/white"/>
    
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是服务器返回的信息" />
</LinearLayout>