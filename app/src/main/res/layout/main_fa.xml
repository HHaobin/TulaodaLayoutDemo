<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
     >
    <RelativeLayout
        android:id="@+id/show_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_line" >
    </RelativeLayout>

    <View 
        android:id="@+id/menu_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/menu_bottom" 
        android:background="@color/bg_Gray"
        />
    <TextView
        android:id="@+id/net_no"
        android:paddingLeft="10dp"
        android:background="@color/background_dark"
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:drawableLeft="@drawable/resize"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:text="当前网络连接不可用"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_menu_0"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/bt_menu_0_select"/>

            <TextView
                android:id="@+id/iv_menu_text_0"
                android:layout_below="@+id/iv_menu_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/iv_menu_main_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_menu_1"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/bt_menu_1_select"/>

            <TextView
                android:id="@+id/iv_menu_text_1"
                android:layout_below="@+id/iv_menu_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分类"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/iv_menu_main_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_menu_2"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/bt_menu_2_select"/>

            <TextView
                android:id="@+id/iv_menu_text_2"
                android:layout_below="@+id/iv_menu_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="喜欢"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/iv_menu_main_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_menu_3"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/bt_menu_3_select"/>

            <TextView
                android:id="@+id/iv_menu_text_3"
                android:layout_below="@+id/iv_menu_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/iv_menu_main_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_menu_4"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/bt_menu_4_select"/>

            <TextView
                android:id="@+id/iv_menu_text_4"
                android:layout_below="@+id/iv_menu_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/iv_menu_main_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>