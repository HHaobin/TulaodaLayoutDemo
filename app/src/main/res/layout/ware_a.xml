<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <com.lesogo.cu.custom.xListview.XListView
        android:id="@+id/listView_ware"
        android:layout_below="@+id/ll_choice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000" />
    <RelativeLayout
        android:id="@+id/RelativeLayout_ware"
        android:layout_below="@+id/ll_choice"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/RelativeLayout_ware_text1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热搜："
            android:textColor="@color/red"/>
        <LinearLayout
            android:layout_below="@+id/RelativeLayout_ware_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textColor="@color/tab_textcolor_selector1"/>
            <TextView
                android:id="@+id/RelativeLayout_ware_text2"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="女装"
                android:gravity="center"
                android:textColor="@color/tab_textcolor_selector1"/>
            <TextView
                android:id="@+id/RelativeLayout_ware_text3"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="台灯"
                android:gravity="center"
                android:textColor="@color/tab_textcolor_selector1"/>
            <TextView
                android:id="@+id/RelativeLayout_ware_text4"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="皮包"
                android:gravity="center"
                android:textColor="@color/tab_textcolor_selector1"/>
            <TextView
                android:id="@+id/RelativeLayout_ware_text5"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="零食"
                android:gravity="center"
                android:textColor="@color/tab_textcolor_selector1"/>
            <TextView
                android:id="@+id/RelativeLayout_ware_text6"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="家电"
                android:gravity="center"
                android:textColor="@color/tab_textcolor_selector1"/>
            <TextView
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textColor="@color/tab_textcolor_selector1"/>
        </LinearLayout>
        <ImageView
            android:layout_marginBottom="5dp"
            android:layout_above="@+id/RelativeLayout_ware_text"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/f047"/>
        <TextView
            android:gravity="center"
            android:id="@+id/RelativeLayout_ware_text"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赶紧搜索你想要的商品吧..."/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:orientation="vertical"
        android:paddingBottom="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/tb_icon_actionbar_back" />
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/search_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bing_input_edt" >
                <EditText
                    android:id="@+id/ed_Searchware"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/search_btn"
                    android:background="@drawable/transparent_edittext_bg"
                    android:hint="逛集市附近商品/店铺"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/text_mid_size"
                    android:gravity="left"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
                <ImageView
                    android:paddingLeft="10dp"
                    android:id="@+id/search_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:src="@drawable/search_btn_bg" />
            </RelativeLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tb_icon_actionbar_more" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>